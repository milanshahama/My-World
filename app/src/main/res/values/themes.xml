<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyWorld" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.MyWorld" parent="Base.Theme.MyWorld" />

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DashboardCard" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DashboardCardContent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DashboardCardIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="DashboardCardTitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleSmall</item>
    </style>

    <style name="DashboardCardStatus" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>